@{
    ViewData["Title"] = "Cancel Nurse";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center min-vh-100 bg-light animate__animated animate__fadeIn">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 600px; width: 100%;">
        <h3 class="text-danger fw-bold mb-2 text-center"><i class="fas fa-user-times me-2"></i>Cancel Nurse</h3>
        <p class="text-primary fw-bold fs-5 mb-3 text-center"><i class="fas fa-user me-2"></i>@ViewBag.name</p>

        <form method="post" id="rejectForm" asp-action="cancelNurse" asp-controller="Admin" asp-route-id="@ViewBag.nurseId" class="mt-3"> </form>
            

            <div class="mb-3">
                <label class="form-label fw-semibold">Reason for cancellation:</label>
                <textarea class="form-control shadow-sm" name="reason" rows="4" placeholder="Enter detailed reason for cancelling this nurse..." required></textarea>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-danger px-4 shadow-sm" onclick="cancelNurse()">
                    <i class="fas fa-times-circle me-1"></i> Proceed to Cancel
                </button>
                <button type="button" onclick="history.back();" class="btn btn-secondary px-4 shadow-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back
                </button>
            </div>
       
    </div>
</div>

<!-- Animate.css and Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
<script>
    function cancelNurse()
    {

        Swal.fire({
            title: "Cancel Nurse ?",
            text: "Are you sure you want to cancel the nurse registration?",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
               cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, cancel',
            cancelButtonText: 'No',
        }).then((result) =>{
            if(result.isConfirmed)
            {
                document.getElementById('rejectForm').submit();
            }
        } )





