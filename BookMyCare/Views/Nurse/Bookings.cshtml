@{
    TempData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";
}
<style>
    .appointment-card {
        border: none;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        overflow-x: hidden;
    }

    .appointment-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        background-color: #e9f0ff;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 15px;
        overflow: hidden;
    }

    .badge-status {
        font-size: 12px;
    }

    .text-muted i {
        margin-right: 4px;
    }

    a.text-decoration-none.text-dark:hover .appointment-card {
        transform: translateY(-4px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    a.text-decoration-none.text-dark {
        display: block;
    }
</style>

<div class="container px-4 py-4">
    <!-- Heading Row -->
    <div class="row align-items-center mb-4 text-center text-md-start">
        <div class="col-12 col-md-6">
            <h4 class="fw-bold text-primary mb-2 mb-md-0">
                <i class="fas fa-calendar-check me-2"></i> Your Bookings
            </h4>
        </div>
        <div class="col-12 col-md-6 text-md-end">
            <span class="badge bg-light text-dark px-3 py-2 shadow-sm border border-secondary-subtle rounded-pill fs-6">
                Upcoming Bookings: <strong>@ViewBag.count</strong>
            </span>
        </div>
    </div>



    <div class="row g-4">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var bookings in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <a asp-controller="Nurse" asp-action="BookingDetails" asp-route-id="@bookings.id" class="text-decoration-none text-dark">
                        <div class="appointment-card bg-white">
                            <div class="d-flex align-items-start">
                                <div class="icon-circle text-primary">
                                    @if (string.IsNullOrEmpty(bookings.photograph))
                                    {
                                        <i class="fas fa-user-injured"></i>
                                    }
                                    else
                                    {
                                        <img src="~/uploads/user/@bookings.photograph" class="img-fluid rounded-circle"
                                             style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                </div>

                                <div>
                                    <h6 class="fw-semibold mb-1">@bookings.name</h6>
                                    <p class="mb-1 text-muted"><i class="fas fa-clock"></i> @bookings.start_date, @bookings.start_time</p>
                                    <p class="mb-1 text-muted"><i class="fas fa-map-marker-alt"></i> @bookings.city, @bookings.state</p>
                                    <span class="badge bg-warning text-dark badge-status">Pending</span>
                                </div>
                            </div>
                            <div class="mt-3 text-end">
                                <span class="btn btn-outline-primary btn-sm disabled"><i class="fas fa-eye me-1"></i>View</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-danger">No Bookings found.</div>
            </div>
        }
    </div> <!-- end row -->
</div> <!-- end container -->

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    @if (TempData["Success"] != null)
    {
        <text>
                Swal.fire({
                    title: 'Success!',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
        </text>
    }
    @if (TempData["reject"] != null)
    {
        <text>
                    Swal.fire({
                        title: 'Success!',
                        text: '@TempData["reject"]',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
        </text>
    }
</script>
