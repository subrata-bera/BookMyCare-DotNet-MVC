@{
    ViewData["Title"] = "Our Services";
}



<section class="services-section py-5 bg-light">
   
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Our Services</h2>
            <p class="text-muted">Fast, secure, and professional healthcare services at your fingertips.</p>
        </div>

        <div class="row g-4">
            <!-- Nurse Service -->
            <div class="col-md-6 col-lg-4">
                <div class="service-card shadow p-4 text-center h-100 border-0 rounded-4 bg-white animate-hover">
                    <div class="icon-wrapper mb-3 mx-auto">
                        <i class="fa-solid fa-user-nurse fa-3x text-success"></i>
                    </div>
                    <h5 class="fw-semibold">Book a Nurse</h5>
                    <p class="text-muted">Get qualified nurses at your doorstep for injections, wound care, or elderly support.</p>
                    <a asp-controller="Services" asp-action="Nurses" class="btn btn-success mt-3">Get Started</a>
                </div>
            </div>

            <!-- Ambulance Service -->
            <div class="col-md-6 col-lg-4">
                <div class="service-card shadow p-4 text-center h-100 border-0 rounded-4 bg-white animate-hover">
                    <div class="icon-wrapper mb-3 mx-auto">
                        <i class="fas fa-truck-medical fa-3x text-danger"></i>
                    </div>
                    <h5 class="fw-semibold">Book an Ambulance</h5>
                    <p class="text-muted">Emergency or planned—find the nearest ambulance in just a few clicks.</p>
                    @* <a class="btn btn-danger mt-3">Book Now</a> *@
                    <button class="btn btn-danger mt-3" onclick="book()">Book Now</button>
                </div>
            </div>

            <!-- More Services in Future -->
            <div class="col-md-6 col-lg-4">
                <div class="service-card shadow p-4 text-center h-100 border-0 rounded-4 bg-white animate-hover">
                    <div class="icon-wrapper mb-3 mx-auto">
                        <i class="fas fa-heartbeat fa-3x text-primary"></i>
                    </div>
                    <h5 class="fw-semibold">More Coming Soon</h5>
                    <p class="text-muted">We’re working on bringing lab tests, online consultations, and more.</p>
                    <a href="/Home/Contact" class="btn btn-outline-primary mt-3">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .services-section {
            background: linear-gradient(to right, #f0f4ff, #ffffff);
        }

        .service-card {
            transition: all 0.3s ease-in-out;
        }

        .animate-hover:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background-color: #eaf2ff;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: 0.4s;
        }

            .icon-wrapper i {
                transition: transform 0.4s;
            }

        .animate-hover:hover .icon-wrapper i {
            transform: scale(1.2);
        }

        .btn {
            transition: all 0.2s ease-in-out;
        }

            .btn:hover {
                transform: scale(1.05);
            }
    </style>
}
    
<script>
    function book()
    {
        Swal.fire({
            icon: 'error',
            title: 'Sorry',
            text: 'Ambulance services are currently unavailable. Please try again later. We apologize for the inconvenience.'
        });
    }
</script>


