<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@TempData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <!-- SweetAlert -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/css/NurseHome.css " rel="stylesheet" />
    <link href="~/css/PageLoader.css" rel="stylesheet" />
    <style>
        .nav-link{
            cursor:pointer;
        }
    </style>
  
</head>
<body>
    <!-- Loader -->
    <div id="preloader">
        <div class="loader-icon">
            <i class="fas fa-heartbeat fa-3x pulse"></i>
        </div>
    </div>

    <div class="wrapper">
        <!-- Sidebar -->
      
        <div class="sidebar" id="sidebar">

            <div class="text-end p-2 d-md-none">
                <i class="fas fa-times text-danger fs-4" onclick="closeSidebar()" style="cursor:pointer;"></i>
            </div>
            <!-- Profile Section -->
            <div class="text-center p-3">
               
                <img src="~/uploads/nurse/@ViewBag.photo" class="rounded-circle mb-2" style="width: 80px; height: 80px; object-fit: cover;" alt="Profile Picture" />
                <div class="fw-semibold mt-1">@ViewBag.name</div>
            </div>



            <!-- Navigation Links -->
            <nav class="nav flex-column px-2">
                <a class="nav-link" asp-controller="Nurse" asp-action="Home"><i class="fas fa-home me-2"></i> Dashboard</a>
                <a class="nav-link" asp-controller="Nurse" asp-action="Bookings"><i class="fas fa-clipboard-list me-2"></i> Bookings</a>
                <a class="nav-link"><i class="fas fa-calendar-check me-2"></i> Availability</a>
                <a class="nav-link" asp-controller="Nurse" asp-action="UpdateProfile"><i class="fas fa-user-edit me-2"></i> Edit Profile</a>
                <a class="nav-link" asp-controller="Nurse" asp-action="BookingHistory"><i class="fas fa-history me-2"></i> History</a>
                <a class="nav-link" asp-controller="Nurse" asp-action="Support"><i class="fas fa-headset me-2"></i> Support</a>

                <div class="nav-link" onclick="confirmLogout(event)"><i class="fas fa-sign-out-alt me-1"></i> Logout</div>

            </nav>
        </div>



        <!-- Main Content -->
        <div class="main-content">

            <!-- Topbar -->

            <div class="topbar">
                <div class="d-flex align-items-center w-100 justify-content-between">
                    <span class="sidebar-toggler" onclick="toggleSidebar()"><i class="fas fa-bars"></i></span>
                </div>
                
            </div>
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('active');
        }
             function closeSidebar() {
            document.getElementById('sidebar').classList.remove('active');
        }
        function confirmLogout(event) {
            event.preventDefault();
            Swal.fire({
                title: 'Logout?',
                text: "You will be logged out from your account.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, logout',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Nurse/Logout';
                }
            });
        }
    </script>
    <script src="~/js/PageLoader.js"></script>

</body>
</html>
