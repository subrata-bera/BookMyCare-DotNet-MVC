
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="mb-4 fw-bold">Welcome, @ViewBag.name</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card dashboard-card p-3 shadow-sm border-0 rounded-4 text-center">
            <div class="text-primary mb-2"><i class="fas fa-user-nurse fa-2x"></i></div>
            <h5 class="card-title">Book a Nurse</h5>
            <p class="card-text">Find and book certified nurses for home care services.</p>
            <a asp-controller="Services" asp-action="Nurses" class="btn btn-outline-primary btn-sm">Start</a>
        </div>
    </div>
    <div class="col">
        <div class="card dashboard-card p-3 shadow-sm border-0 rounded-4 text-center">
            <div class="text-danger mb-2"><i class="fas fa-ambulance fa-2x"></i></div>
            <h5 class="card-title">Book an Ambulance</h5>
            <p class="card-text">Locate nearby ambulance services in emergencies. -----</p>
            <button class="btn btn-outline-danger btn-sm" onclick="book()">Book Now</button>
        </div>
    </div>
    <div class="col">
        <div class="card dashboard-card p-3 shadow-sm border-0 rounded-4 text-center">
            <div class="text-success mb-2"><i class="fas fa-user-cog fa-2x"></i></div>
            <h5 class="card-title">Update Profile</h5>
            <p class="card-text">Change your account info and contact details.<br /> ----</p>
            <a asp-controller="User" asp-action="UpdateProfile" class="btn btn-outline-success btn-sm">Edit</a>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function book()
    {
        Swal.fire({
            icon: 'error',
            title: 'Sorry',
            text: 'Ambulance services are currently unavailable. Please try again later. We apologize for the inconvenience.'
        });
    }



    @if (TempData["sucess"] != null)
    {
        <text>
                        Swal.fire({
                            title: 'Success!',
                            text: '@TempData["sucess"]',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
        </text>
    }
</script>